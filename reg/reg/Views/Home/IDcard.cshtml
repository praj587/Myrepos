@model reg.Models.tbl_Reg

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>IDcard</title>
    <style>
        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            max-width: 300px;
            margin: auto;
            text-align: center;
            font-family: arial;
        }

        .title {
            color: grey;
            font-size: 18px;
        }

        button {
            border: none;
            outline: 0;
            display: inline-block;
            padding: 8px;
            color: white;
            background-color: #000;
            text-align: center;
            cursor: pointer;
            width: 100%;
            font-size: 18px;
        }

        a {
            text-decoration: none;
            font-size: 22px;
            color: black;
        }

            button:hover, a:hover {
                opacity: 0.7;
            }
    </style>
</head>
<body>
    <h2 style="text-align:center">PARVEEN TRAVELS ID</h2>

    <div class="card">
        @if (ViewBag.QRCodeImage != null)
        {
            <img id="imgQR" src="@ViewBag.QRCodeImage" alt="" style="height:150px;width:150px" />
        }


        <h1>@ViewBag.Name</h1>
        <p class="title">@ViewBag.Service</p>
       
        
        <p><button>Contact</button></p>
</body>
</html>
